<?xml version="1.0" encoding="UTF-8"?>
<beans
        xmlns="http://www.springframework.org/schema/beans"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:context="http://www.springframework.org/schema/context"
        xsi:schemaLocation=
                "http://www.springframework.org/schema/beans
                http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
                http://www.springframework.org/schema/context
                http://www.springframework.org/schema/context/spring-context-3.2.xsd">

    <context:annotation-config />
    <context:component-scan base-package="com.spring.movie.theater" />

    <import resource="daos.xml"/>

    <bean id="bookingService" class="com.spring.movie.theater.impl.DefaultBookingService"/>
    <bean id="main" class="MovieTheaterMain">
        <constructor-arg ref="userDao"/>
        <constructor-arg ref="eventDao"/>
    </bean>
</beans>